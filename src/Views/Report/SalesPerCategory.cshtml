@model Triton.FleetManagement.Web.Models.SalesPerCategoryModel
<main id="content" role="main" class="main">
    <!-- Content -->
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-end">
                <div class="col-sm mb-2 mb-sm-0">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-no-gutter">
                            <li class="breadcrumb-item"><a class="breadcrumb-link" href="javascript:;">Reports</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sales Per Category</li>
                        </ol>
                    </nav>

                    <h1 class="page-header-title">Category Report</h1>
                </div>
            </div>
        </div>
        <!-- End Page Header -->
    </div>
    <div class="content container-fluid my-n9">
        <!-- Filter -->
        <form class="js-validate" method="post" asp-action="SalesPerCategory" asp-controller="Report">
            <div class="row mb-5">
                <div class="col-2 mb-5">
                    <label for="firstNameAddressLabel" class="input-label">Category</label>
                    @Html.DropDownListFor(m => m.SelectedCategory, new SelectList(Model.CategoryList, "CATEGORY", "CATEGORY"), new
                    {
                        @class = "js-select2-custom custom-select",
                        size = "1",
                        style = "opacity: 0;"
                    })
                </div>

                <div class="col-2 mb-5">
                    <label for="firstNameAddressLabel" class="input-label">Location</label>
                    @Html.DropDownListFor(m => m.SelectedICLOC, new SelectList(Model.ICLOCList, "LOCATION", "LOCATION"), new
                    {
                        @class = "js-select2-custom custom-select",
                        size = "1",
                        style = "opacity: 0;"
                    })
                </div>

                <div class="col-2 mb-5">
                    <label for="firstNameAddressLabel" class="input-label">Year</label>
                    @Html.DropDownListFor(m => m.Year, new SelectList(Model.OESHDT, "YR", "YR"), new
                    {
                        @class = "js-select2-custom custom-select",
                        size = "1",
                        style = "opacity: 0;"
                    })
                </div>

                <div class="col-2 mb-5">
                    <label for="firstNameAddressLabel" class="input-label">Peroid</label>
                    @Html.DropDownListFor(m => m.Month, new SelectList(Model.Peroids, "Peroid", "Peroid"), new
                    {
                        @class = "js-select2-custom custom-select",
                        size = "1",
                        style = "opacity: 0;"
                    })
                </div>
                <div class="col-auto mb-2">
                    <label for="" class="input-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
            <!-- End Filter -->
        </form>
    </div>

    <div class="content container-fluid my-n9">
        @if (Model.ShowReport == false)
        {
            <div class="card">
                <div class="card-body">
                    <!-- Hero Section -->
                    <div class="container space-2">
                        <div class="row justify-content-lg-between align-items-lg-center">
                            <div class="col-sm-10 col-lg-5 mb-7 mb-lg-0">
                                <img class="img-fluid" src="~/front-dashboard-v1.1/dist/assets/svg/illustrations/reading.svg" alt="Image Description">
                            </div>

                            <div class="col-md-6">
                                <div class="mb-5">
                                    <h1 class="display-4 mb-3">
                                        Sales Per Category
                                        <br>
                                        <span class="text-primary font-weight-bold">
                                            <span class="js-text-animation"></span>
                                        </span>
                                    </h1>
                                    <p class="lead">Complete the filters above to view the report</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Hero Section -->
                </div>
            </div>
        }
        else
        {
            <div id="editAddressCard" class="card mb-3 mb-lg-5">
                <div class="card-header">
                    <h5 class="card-title">Report Information</h5>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="embed-responsive embed-responsive-1by1">
                            <iframe class="embed-responsive-item" src="@Model.Url"></iframe>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</main>
